   keywords = {Dark matter,Galaxies: clusters: general,Galaxies: haloes,Methods: N-body simulations,Methods: numerical,numerical-galaxies},
   pages = {L21-L25},
   publisher = {Oxford Academic},
   title = {Quantifying the heart of darkness with GHALO – a multibillion particle simulation of a galactic halo},
   volume = {398},
