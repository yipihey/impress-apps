   journal = {ApJS},
   keywords = {Accretion Disks,Astrophysics,Black Holes (Astronomy),Collisional Plasmas,Collisionless Plasmas,Cosmology,Density Distribution,Galactic Clusters,Galactic Evolution,Galactic Structure,Gravitational Collapse,Hydrodynamics,Perturbation Theory,Relativity,Shock Wave Propagation,Similarity Theorem},
   pages = {39-65},
   publisher = {American Astronomical Society},
   title = {Self-similar secondary infall and accretion in an Einstein-de Sitter universe},
