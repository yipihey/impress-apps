   journal = {ApJS},
   keywords = {Astrophysics,Collisional Plasmas,Collisionless Plasmas,Cosmology,Density Distribution,Galactic Clusters,Galactic Evolution,Hubble Constant,Hydrodynamics,Nonlinear Equations,Perturbation Theory,Relativity,Shock Waves,Similarity Theorem},
