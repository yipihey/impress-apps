@article{Avila2024,
   abstract = {The baryon acoustic oscillations (BAOs) phenomenon provides a unique opportunity to establish a standard ruler at any epoch in the history of the evolving universe. The key lies in identifying a suitable cosmological tracer to conduct the measurement. In this study, we focus on quantifying the sound horizon scale of BAO in the Local Universe. Our chosen cosmological tracer is a sample of blue galaxies from the Sloan Digital Sky Survey (SDSS), positioned at the effective redshift. Utilizing Planck-CMB input values for redshift-to-distance conversion, we derive the BAO scale Mpc h-1 at the 1 confidence level. Subsequently, we extrapolate the BAO signal scale in redshift space:. This measurement holds the potential to discriminate among dark energy models within the Local Universe. To validate the robustness of our methodology for BAO scale measurement, we conduct three additional BAO analyses using different cosmographic approaches for distance calculation from redshifts. These tests aim to identify possible biases or systematics in our measurements of. Encouragingly, our diverse cosmographic approaches yield results in statistical agreement with the primary measurement, indicating no significant deviations. Conclusively, our study contributes with a novel determination of the BAO scale in the Local Universe, at, achieved through the analysis of the SDSS blue galaxies cosmic tracer.},
   author = {Felipe Avila and Edilson De Carvalho and Armando Bernui and Hanna Lima and Rafael C. Nunes},
   doi = {10.1093/MNRAS/STAE867},
