   issue = {8},
   journal = {Analytical Chemistry},
   pages = {1627-1639},
   publisher = {American Chemical Society},
   title = {Smoothing and Differentiation of Data by Simplified Least Squares Procedures},
   volume = {36},
   url = {https://pubs.acs.org/doi/abs/10.1021/ac60214a047},
   year = {1964}
}
