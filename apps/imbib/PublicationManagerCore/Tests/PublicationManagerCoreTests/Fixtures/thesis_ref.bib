   issn = {1475-7516},
   issue = {07},
   journal = {Journal of Cosmology and Astroparticle Physics},
   keywords = {CMBR theory,power spectrum},
   pages = {034},
   publisher = {IOP Publishing},
   title = {The Cosmic Linear Anisotropy Solving System (CLASS). Part II: Approximation schemes},
   volume = {2011},
   url = {https://iopscience.iop.org/article/10.1088/1475-7516/2011/07/034 https://iopscience.iop.org/article/10.1088/1475-7516/2011/07/034/meta},
   year = {2011}
}
